{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "runtime.path": [
    "lua/?.lua",
    "lua/?/init.lua"
  ],
  "format": {
    "enable": true
  },
  "hint": {
    "enable": true
  },
  "diagnostics": {
    "unusedLocalExclude": [
      "_*"
    ]
  },
  "diagnostics.globals": [
    "MiniCompletion",
    "MiniDeps",
    "MiniNotify",
    "MiniPick",
    "vim"
  ],
  "workspace.checkThirdParty": false,
  "workspace.library": [
    "$VIMRUNTIME",
    "$XDG_DATA_HOME/nvim"
  ]
}
